@{ var error = TempData["paypal-ec-error"]; }

<img id="payPalExpressCheckoutImage" alt="" src="https://www.paypalobjects.com/en_GB/i/btn/btn_xpressCheckout.gif" style="cursor:pointer;" />

@if (error != null)
{
    <p class="error">@error</p>
}
    <script asp-location="Footer">
        $(document).ready(function() {
            $('#payPalExpressCheckoutImage').click(function() {
                //terms of service
                if ($('#termsofservice').length > 0) {
                    //terms of service element exists
                    if (!$('#termsofservice').is(':checked')) {
                        $("#terms-of-service-warning-box").dialog();
                    } else {
                        setLocation('@Url.RouteUrl("Plugin.Payments.PayPalExpressCheckout.SubmitButton")');
                    }
                }
            });
        });
   
    </script>